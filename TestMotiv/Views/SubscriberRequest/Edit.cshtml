@using TestMotiv.DTO

@model SubscriberRequestDto

<div class="col-sm-6">
    <form method="post">
        <div class="form-group">
            @Html.LabelFor(i => i.Phone)
            @Html.TextBoxFor(i => i.Phone)
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.RequestReasonId)
            @Html.DropDownListFor(i => i.RequestReasonId, ViewBag.RequestReasons as SelectList)
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.CountryId)
            @Html.DropDownListFor(i => i.CountryId, ViewBag.Countries as SelectList)
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.RegionId)
            @Html.DropDownListFor(i => i.RegionId, ViewBag.Regions as SelectList)
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.CityId)
            @Html.DropDownListFor(i => i.CityId, ViewBag.Cities as SelectList)
        </div>
        <div class="form-group">
            <input type="submit" value="Применить" class="btn btn-block btn-success">
        </div>
    </form>
</div>

@section scripts
{
    <script>
    $(() => {
        setDropDownValue('#@nameof(SubscriberRequestDto.RequestReasonId)', @Url.Action("List", "RequestReason"))
       $() 
    });
    </script>
}
